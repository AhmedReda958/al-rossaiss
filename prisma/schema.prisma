generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int       @id @default(autoincrement())
  email                  String    @unique
  password               String
  resetPasswordToken     String?   @unique
  resetPasswordExpires   DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
}

model City {
  id             Int      @id @default(autoincrement())
  name           String
  nameAr         String?
  image          String
  labelDirection String
  points         Float[]
  regionId       Int
  region         Region   @relation(fields: [regionId], references: [id])
  projects       Project[]
  landmarks      Landmark[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Region {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  nameAr   String?
  key      String    @unique
  cities   City[]
}

model Project {
  id             Int      @id @default(autoincrement())
  name           String
  nameAr         String?
  description    String?
  descriptionAr  String?
  image          String?
  logo           String?  // Project logo for display on polygon
  labelDirection String?
  points         Float[]
  cityId         Int     // Foreign key to City
  city           City    @relation(fields: [cityId], references: [id])
  unitType       String  @default("apartment") // Type of unit in English
  unitTypeAr     String? // Type of unit in Arabic
  soldOut        Boolean @default(false)
  space          Float   @default(0) // Space in square meters
  unitsCount     Int     @default(1) // Number of units in the project
  url            String? // Project website or landing page URL
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Landmark {
  id          Int      @id @default(autoincrement())
  name        String
  nameAr      String?
  type        String
  image       String?  // Custom image for landmark type
  coordinates Json
  cityId      Int
  city        City     @relation(fields: [cityId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
} 